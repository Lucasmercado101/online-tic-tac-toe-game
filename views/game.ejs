<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <script>
        const roomNumber = "<%= roomNumber %>"
    </script>
    <script defer src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="/js/game.js"></script>
    <title>Tic Tac Toe</title>
</head>

<body id="game-board">
    <div id="board">
        <div id="board__header">
            <h1 class="title">Tic Tac Toe</h1>
            <div style="display: none;" class="subtitle"></div>
            <div id="picker">
                <button id="selectX">X</button>
                <button id="selectO">O</button>
            </div>
        </div>
        <div id="game-grid">
            <div id="top-left"></div>
            <div id="top"></div>
            <div id="top-right"></div>
            <div id="left"></div>
            <div id="center"></div>
            <div id="right"></div>
            <div id="bottom-left"></div>
            <div id="bottom"></div>
            <div id="bottom-right"></div>
        </div>
    </div>
    <aside id="chatbox">
        <form id="username-input">
            <input type="text" name="userNameBox" id="userNameBox" placeholder="Username">
            <input type="submit" value="Set">
        </form>
        <div id="messages"></div>
        <form id="message-input">
            <input type="text" name="messageBox" id="messageBox">
            <input type="submit" value="Send">
        </form>
    </aside>

    <div id="end-game">
        <div>
            <p id="won-lose-text"></p>
            <button id="reset">Reset</button>
        </div>
    </div>

</body>

</html>